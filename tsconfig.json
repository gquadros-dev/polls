{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "resolveJsonModule": true,
    "sourceMap": false, 
    "removeComments": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"] 
}
